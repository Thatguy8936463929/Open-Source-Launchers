<Window x:Class="CosmoLauncherV1.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login - Cosmo Launcher" Height="220" Width="300" WindowStartupLocation="CenterScreen">
    <Grid Background="#FF1E1E2D">
        <StackPanel Margin="30" VerticalAlignment="Center" Spacing="10">
            <TextBox Name="txtUsername" Height="30" PlaceholderText="Username"/>
            <PasswordBox Name="txtPassword" Height="30" PlaceholderText="Password"/>
            <Button Name="btnSubmit" Content="Login" Height="35" Click="btnSubmit_Click"/>
        </StackPanel>
    </Grid>
</Window>
